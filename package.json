{
  "name": "stuurkracht-api",
  "version": "1.0.0",
  "description": "API for Stuurkracht.be",
  "license": "The Unlicense",
  "author": "Atlesque",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "ts-node src/main",
    "prestart:prod": "npm run build",
    "start:prod": "node dist/main.js",
    "knex": "knex --knexfile knexfile.ts",
    "migrate": "npm run knex migrate:latest",
    "migrate:make": "npm run knex migrate:make -- -x ts",
    "seed": "npm run knex seed:run",
    "seed:make": "npm run knex seed:make -- -x ts",
    "run:pg-docker": "docker run -it --rm --name pg-docker -e POSTGRES_PASSWORD=docker -p 5432:5432 postgres:10",
    "stop:pg-docker": "docker kill pg-docker"
  },
  "dependencies": {
    "@nestjs/common": "^7.5.1",
    "@nestjs/core": "^7.5.1",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "6.2.4",
    "@types/dotenv": "^6.1.1",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "knex": "^0.21.12",
    "node-mailjet": "^3.3.1",
    "objection": "^2.2.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.18.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.5.2",
    "typescript": "^4.0.5",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/node": "10.14.7",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "ts-node": "8.2.0",
    "tslint": "5.16.0"
  }
}
